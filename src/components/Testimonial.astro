---
const { data } = Astro.props;
---

<div class="slide">
  <a href={`testimonial/${data.slug}`}>
    <div class="testimonialcard content">
      <h3 class="titel">{data.title}</h3>
      <p class="review">{data.description}</p>
      <p class="name">- {data.name}</p>
      <!-- <div class="accepted">{data.accepted}</div> -->
      <div class="fivestars">
        <img src={`../img/${data.stars}`} alt="Tilbage pil" />
      </div>
    </div>
  </a>
</div>

<script></script>

<style>
  .hide {
    display: none;
  }

  /* .accepted{
    color: hotpink;
