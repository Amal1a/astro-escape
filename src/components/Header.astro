<header>
  <div class="HeaderBar">
    <div class="EscapeLogo">
      <a href="/"
        ><img class="EscapeLogoSVG" src="/svg/LogoEscape.svg" alt="logo" /></a
      >
    </div>
  </div>
</header>

<style>
  * {
    box-sizing: border-box;
    margin: 0;
  }

  .HeaderBar {
    background-color: transparent;
    padding-left: 2rem;
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  @media only screen and (min-width: 768px) {
    .HeaderBar {
      position: fixed;
    }
  }

  @media only screen and (max-width: 767px) {
    .HeaderBar {
      position: static;
    }
  }

  .EscapeLogo {
    display: flex;
    justify-content: flex-start;
  }

  .EscapeLogoSVG {
    max-height: 5rem;
  }
</style>
